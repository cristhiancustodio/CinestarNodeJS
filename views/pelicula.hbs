<br>
<h1>Cartelera</h1><br>

{{#each pelicula}}

<div class="contenido-pelicula">
    <div class="datos-pelicula">
        <h2>{{this.Titulo}} (Todo Público)</h2>
        <p>{{this.Sinopsis}}</p>
        <br>
        <div class="tabla">
            <div class="fila">
                <div class="celda-titulo">Título Original :</div>
                <div class="celda">{{this.Titulo}}</div>
            </div>
            <div class="fila">
                <div class="celda-titulo">Estreno :</div>
                <div class="celda">{{this.FechaEstreno}}</div>
            </div>
            <div class="fila">
                <div class="celda-titulo">Género :</div>
                <div class="celda">Aventura / Acción</div>
            </div>
            <div class="fila">
                <div class="celda-titulo">Director :</div>
                <div class="celda">{{this.Director}}</div>
            </div>
            <div class="fila">
                <div class="celda-titulo">Reparto :</div>
                <div class="celda">{{this.Reparto}}</div>
            </div>
        </div>
    </div>
    <img src="img/pelicula/{{this.idPelicula}}.jpg" width="160" height="226"><br><br>
</div>
<div class="pelicula-video">
    <!-- <iframe width="580" height="400" src="http://www.youtube.com/v/6maujJFcuxA" frameborder="0" allowfullscreen></iframe> -->
    <embed src="http://www.youtube.com/v/{{this.Link}}" type="application/x-shockwave-flash" allowscriptaccess="always"
        allowfullscreen="true" width="580" height="400">
</div>
{{/each}}